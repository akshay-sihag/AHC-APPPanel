generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  name          String?
  phone         String?
  avatar        String?
  role          UserRole @default(USER)
  isActive      Boolean  @default(true)
  emailVerified Boolean  @default(false)

  // Login tracking
  lastLoginAt    DateTime?
  lastLoginIp    String?
  currentIp      String?
  loginCount     Int       @default(0)
  lastActivityAt DateTime?

  // Secret tokens for login
  secretTokens SecretToken[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum UserRole {
  ADMIN
  USER
}

model Settings {
  id         String @id @default("settings")
  // General Settings
  adminEmail String @default("admin@alternatehealthclub.com")
  timezone   String @default("America/New_York")

  // Display Units (for app system view only, not affecting API)
  weightUnit String @default("lbs") // Options: lbs, kg, g
  heightUnit String @default("inches") // Options: inches, cm, m, feet

  // Security Settings
  sessionTimeout        Int     @default(30)
  requireStrongPassword Boolean @default(true)
  enableTwoFactor       Boolean @default(false)

  // WooCommerce Settings
  woocommerceApiUrl    String?
  woocommerceApiKey    String?
  woocommerceApiSecret String?

  // FCM Settings for Push Notifications
  fcmServerKey         String?  // Firebase Cloud Messaging server key
  fcmProjectId         String?  // Firebase project ID

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

model ApiKey {
  id        String    @id @default(cuid())
  name      String
  key       String // Hashed key for storage
  keyPrefix String // First few chars for display (e.g., "ahc_live_sk_")
  createdAt DateTime  @default(now())
  lastUsed  DateTime?
  isActive  Boolean   @default(true)

  // Timestamps
  updatedAt DateTime @updatedAt

  @@map("api_keys")
}

model SecretToken {
  id           String    @id @default(cuid())
  userId       String // Link to user for login authentication
  name         String
  token        String // Hashed token for storage
  tokenPrefix  String // First few chars for display (e.g., "ahc_sec_")
  isLoginToken Boolean   @default(false) // If true, this token is required for login
  createdAt    DateTime  @default(now())
  lastUsed     DateTime?
  isActive     Boolean   @default(true)

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Timestamps
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("secret_tokens")
}

model AppUser {
  id        String   @id @default(cuid())
  
  // WordPress user data
  wpUserId       String   @unique // WordPress user ID
  email          String
  name           String?
  displayName    String?
  
  // Additional user information
  phone          String?
  age            Int?
  height         String?
  feet           String?  // Height in feet (e.g., "5'10\"")
  
  // Fitness data
  weight         String?  // Current weight
  goal           String?  // Goal weight
  initialWeight  String?  // Initial weight when user started
  weightSet      Boolean  @default(false) // Whether weight data has been set
  tasksToday     Int      @default(0)
  totalWorkouts  Int      @default(0)
  totalCalories  Int      @default(0)
  streak         Int      @default(0)
  
  // Task tracking (resets daily)
  taskStatus     Json?    // { date: "YYYY-MM-DD", tasks: [boolean, boolean, boolean] } - tracks 3 tasks completion for the day
  
  // Status and tracking
  status         String   @default("Active") // Active, Inactive
  lastLoginAt    DateTime?
  lastLoginIp    String?
  loginCount     Int      @default(0)
  
  // Push notifications
  fcmToken       String?  // Firebase Cloud Messaging token for push notifications
  
  // Relations
  weightLogs     WeightLog[]
  medicationLogs MedicationLog[]
  changeLogs     UserChangeLog[]
  
  // Timestamps
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([email])
  @@index([wpUserId])
  @@map("app_user")
}

model Blog {
  id            String   @id @default(cuid())
  title         String
  tagline       String
  description   String   @db.Text // Rich text HTML content
  tags          String[] // Array of tags
  featuredImage String
  status        String   @default("published") // published, draft
  
  // Timestamps
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([status])
  @@map("blogs")
}

model MedicineCategory {
  id        Int      @id @default(autoincrement())
  title     String
  tagline   String?
  icon      String?  // Icon image path
  
  // Relations
  medicines Medicine[]
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
  @@map("medicine_categories")
}

model Medicine {
  id          String   @id @default(cuid())
  categoryId Int
  title       String
  tagline     String?
  description String?  @db.Text
  image       String?
  url         String?
  price       Float?   // Price in USD
  status      String   @default("active") // active, inactive
  
  // Relations
  category MedicineCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([categoryId])
  @@index([status])
  @@index([title])
  @@map("medicines")
}

model WeightLog {
  id            String   @id @default(cuid())
  appUserId     String   // Foreign key to AppUser
  userId        String   // Reference to app_user (wpUserId or email) - kept for backward compatibility
  userEmail     String   // User email for easy lookup
  userName      String?  // User name for display
  date          DateTime @default(now())
  weight        Float    // Weight in lbs
  previousWeight Float?  // Previous weight for comparison
  change        Float?   // Change in lbs (calculated)
  changeType    String?  // 'increase', 'decrease', 'no-change'
  
  // Relations
  appUser       AppUser  @relation(fields: [appUserId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([appUserId])
  @@index([userId])
  @@index([userEmail])
  @@index([date])
  @@map("weight_logs")
}

model Notification {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  image       String?  // Path to notification image
  isActive    Boolean  @default(true)
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([isActive])
  @@index([createdAt])
  @@map("notifications")
}

model MedicationLog {
  id          String   @id @default(cuid())
  appUserId   String   // Foreign key to AppUser
  medicineId  String?  // Optional reference to Medicine
  medicineName String  // Name of the medicine
  dosage      String   // Dosage information (e.g., "500mg", "1 tablet")
  takenAt     DateTime @default(now()) // When the medicine was taken
  
  // Relations
  appUser     AppUser  @relation(fields: [appUserId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([appUserId])
  @@index([takenAt])
  @@map("medication_logs")
}

model FAQ {
  id          String   @id @default(cuid())
  question    String
  answer      String   @db.Text
  order       Int      @default(0) // For custom ordering
  isActive    Boolean  @default(true)
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([isActive])
  @@index([order])
  @@map("faqs")
}

model UserChangeLog {
  id          String   @id @default(cuid())
  appUserId   String   // Foreign key to AppUser
  field       String   // Field name that changed (e.g., "weight", "goal", "status")
  oldValue    String?  // Previous value (as string)
  newValue    String?  // New value (as string)
  changeType  String   // Type of change: "update", "create", "delete"
  changedBy   String?  // Who made the change (API key name, admin email, etc.)
  ipAddress   String?  // IP address of the requester
  metadata    Json?    // Additional metadata about the change
  
  // Relations
  appUser     AppUser  @relation(fields: [appUserId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt   DateTime @default(now())
  
  @@index([appUserId])
  @@index([field])
  @@index([createdAt])
  @@map("user_change_logs")
}

model Webhook {
  id          String   @id @default(cuid())
  name        String   // Human-readable name for the webhook
  url         String   // Webhook endpoint URL
  secret      String?  // Secret for signing webhook payloads
  events      String[] // Array of event types to listen for (e.g., ["user.created", "user.updated", "weight.logged"])
  isActive    Boolean  @default(true)
  description String?  // Optional description
  
  // Delivery tracking
  lastTriggeredAt DateTime?  // Last time this webhook was triggered
  successCount    Int         @default(0) // Number of successful deliveries
  failureCount    Int         @default(0) // Number of failed deliveries
  lastError       String?     // Last error message if any
  
  // Headers for webhook requests
  headers     Json?    // Custom headers to send with webhook (e.g., {"Authorization": "Bearer ..."})
  
  // Relations
  deliveries  WebhookDelivery[]
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([isActive])
  @@index([url])
  @@map("webhooks")
}

model WebhookDelivery {
  id          String   @id @default(cuid())
  webhookId   String   // Foreign key to Webhook
  event       String   // Event type that triggered this delivery
  payload     Json     // Payload that was sent
  status      String   // "pending", "success", "failed"
  statusCode  Int?     // HTTP status code from webhook endpoint
  response    String?  // Response body from webhook endpoint
  error       String?  // Error message if delivery failed
  attempts    Int      @default(1) // Number of delivery attempts
  nextRetryAt DateTime? // When to retry if failed
  
  // Relations
  webhook     Webhook  @relation(fields: [webhookId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([webhookId])
  @@index([status])
  @@index([createdAt])
  @@map("webhook_deliveries")
}
