generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  name          String?
  phone         String?
  avatar        String?
  role          UserRole @default(USER)
  isActive      Boolean  @default(true)
  emailVerified Boolean  @default(false)

  // Login tracking
  lastLoginAt    DateTime?
  lastLoginIp    String?
  currentIp      String?
  loginCount     Int       @default(0)
  lastActivityAt DateTime?

  // Secret tokens for login
  secretTokens SecretToken[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum UserRole {
  ADMIN
  USER
}

model Settings {
  id         String @id @default("settings")
  // General Settings
  adminEmail String @default("admin@alternatehealthclub.com")
  timezone   String @default("America/New_York")

  // Security Settings
  sessionTimeout        Int     @default(30)
  requireStrongPassword Boolean @default(true)
  enableTwoFactor       Boolean @default(false)

  // WooCommerce Settings
  woocommerceApiUrl    String?
  woocommerceApiKey    String?
  woocommerceApiSecret String?

  // FCM Settings for Push Notifications
  fcmServerKey         String?  // Firebase Cloud Messaging server key
  fcmProjectId         String?  // Firebase project ID

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

model ApiKey {
  id        String    @id @default(cuid())
  name      String
  key       String // Hashed key for storage
  keyPrefix String // First few chars for display (e.g., "ahc_live_sk_")
  createdAt DateTime  @default(now())
  lastUsed  DateTime?
  isActive  Boolean   @default(true)

  // Timestamps
  updatedAt DateTime @updatedAt

  @@map("api_keys")
}

model SecretToken {
  id           String    @id @default(cuid())
  userId       String // Link to user for login authentication
  name         String
  token        String // Hashed token for storage
  tokenPrefix  String // First few chars for display (e.g., "ahc_sec_")
  isLoginToken Boolean   @default(false) // If true, this token is required for login
  createdAt    DateTime  @default(now())
  lastUsed     DateTime?
  isActive     Boolean   @default(true)

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Timestamps
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("secret_tokens")
}

model AppUser {
  id        String   @id @default(cuid())
  
  // WordPress user data
  wpUserId       String   @unique // WordPress user ID
  email          String   @unique // Email must be unique to prevent duplicate registrations
  name           String?
  displayName    String?
  
  // Additional user information
  phone          String?
  age            Int?
  height         String?
  feet           String?  // Height in feet (e.g., "5'10\"")
  
  // Fitness data
  weight         String?  // Current weight
  goal           String?  // Goal weight
  initialWeight  String?  // Initial weight when user started
  weightSet      Boolean  @default(false) // Whether weight data has been set
  tasksToday     Int      @default(0)
  totalWorkouts  Int      @default(0)
  totalCalories  Int      @default(0)
  streak         Int      @default(0)
  
  // Task tracking (resets daily)
  taskStatus     Json?    // { date: "YYYY-MM-DD", tasks: [boolean, boolean, boolean] } - tracks 3 tasks completion for the day
  
  // Status and tracking
  status         String   @default("Active") // Active, Inactive
  lastLoginAt    DateTime?
  lastLoginIp    String?
  loginCount     Int      @default(0)
  
  // Push notifications
  fcmToken       String?  // Firebase Cloud Messaging token for push notifications

  // WooCommerce integration
  woocommerceCustomerId  Int?     // Cached WooCommerce customer ID for faster API lookups

  // Relations
  weightLogs     WeightLog[]
  medicationLogs MedicationLog[]
  notificationViews NotificationView[]
  dailyCheckIns  DailyCheckIn[]
  scheduledNotifications ScheduledNotification[]

  // Timestamps
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([email])
  @@index([wpUserId])
  @@map("app_user")
}

model Blog {
  id            String   @id @default(cuid())
  title         String
  tagline       String
  description   String   @db.Text // Rich text HTML content
  tags          String[] // Array of tags
  featuredImage String
  status        String   @default("published") // published, draft
  
  // Timestamps
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([status])
  @@map("blogs")
}

model MedicineCategory {
  id        Int      @id @default(autoincrement())
  title     String
  tagline   String?
  icon      String?  // Icon image path
  
  // Relations
  medicines Medicine[]
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
  @@map("medicine_categories")
}

model Medicine {
  id          String   @id @default(cuid())
  categoryId Int
  title       String
  tagline     String?
  description String?  @db.Text
  image       String?
  url         String?
  price       Float?   // Price in USD
  productType String   @default("simple") // simple, subscription
  status      String   @default("active") // active, inactive

  // Relations
  category MedicineCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([categoryId])
  @@index([status])
  @@index([title])
  @@map("medicines")
}

model WeightLog {
  id            String   @id @default(cuid())
  appUserId     String   // Foreign key to AppUser
  userId        String   // Reference to app_user (wpUserId or email) - kept for backward compatibility
  userEmail     String   // User email for easy lookup
  userName      String?  // User name for display
  date          DateTime @default(now())
  weight        Float    // Weight in lbs
  previousWeight Float?  // Previous weight for comparison
  change        Float?   // Change in lbs (calculated)
  changeType    String?  // 'increase', 'decrease', 'no-change'
  
  // Relations
  appUser       AppUser  @relation(fields: [appUserId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([appUserId])
  @@index([userId])
  @@index([userEmail])
  @@index([date])
  @@map("weight_logs")
}

model Notification {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  image       String?  // Path to notification image
  url         String?  // URL/route for mobile app navigation (e.g., /medicines, /blogs/123)
  isActive    Boolean  @default(true)

  // Notification type and categorization
  type        String   @default("general")  // general, order, subscription, promotion
  icon        String?  // Icon identifier for mobile app (e.g., ic_order_completed)
  source      String   @default("admin")    // admin, webhook, system

  // Tracking metrics
  receiverCount Int    @default(0) // Number of users who received the push notification
  viewCount     Int    @default(0) // Number of users who viewed/opened the notification

  // Relations
  views         NotificationView[]

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive])
  @@index([createdAt])
  @@index([type])
  @@index([source])
  @@map("notifications")
}

model WebhookLog {
  id            String   @id @default(cuid())
  source        String   // woocommerce, stripe, etc.
  event         String   // order_status, subscription_status
  resourceId    String   // Order ID, Subscription ID
  status        String   // Status received (completed, cancelled, etc.)
  customerEmail String?  // Customer email for tracking

  // Notification details
  notificationTitle String?
  notificationBody  String?

  // Push notification result
  pushSent      Boolean  @default(false)
  pushSuccess   Boolean  @default(false)
  pushError     String?

  // Raw data for debugging
  payload       Json?    // Raw webhook payload

  // Timestamps
  createdAt     DateTime @default(now())

  @@index([source, event])
  @@index([customerEmail])
  @@index([resourceId])
  @@index([createdAt])
  @@map("webhook_logs")
}

model NotificationView {
  id             String      @id @default(cuid())
  notificationId String      // Foreign key to Notification
  appUserId      String?     // Foreign key to AppUser (optional for anonymous tracking)
  wpUserId       String?     // WordPress user ID (if appUserId not available)
  userEmail      String?     // User email (for tracking)
  viewedAt       DateTime    @default(now())
  
  // Relations
  notification   Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  appUser        AppUser?    @relation(fields: [appUserId], references: [id], onDelete: SetNull)
  
  // Timestamps
  createdAt      DateTime    @default(now())
  
  @@unique([notificationId, appUserId]) // Prevent duplicate views from same user
  @@index([notificationId])
  @@index([appUserId])
  @@index([viewedAt])
  @@map("notification_views")
}

model MedicationLog {
  id          String   @id @default(cuid())
  appUserId   String   // Foreign key to AppUser
  medicineId  String?  // Optional reference to Medicine
  medicineName String  // Name of the medicine
  dosage      String   // Dosage information (e.g., "500mg", "1 tablet")
  takenAt     DateTime @default(now()) // When the medicine was taken
  
  // Relations
  appUser     AppUser  @relation(fields: [appUserId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([appUserId])
  @@index([takenAt])
  @@map("medication_logs")
}

model FAQ {
  id          String   @id @default(cuid())
  question    String
  answer      String   @db.Text
  order       Int      @default(0) // For custom ordering
  isActive    Boolean  @default(true)

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive])
  @@index([order])
  @@map("faqs")
}

model PushNotificationLog {
  id                String   @id @default(cuid())
  recipientEmail    String?
  recipientWpUserId String?
  recipientFcmToken String?  // Truncated for privacy
  recipientCount    Int      @default(1)
  title             String
  body              String   @db.Text
  imageUrl          String?
  dataPayload       Json?
  source            String   // 'admin' | 'webhook' | 'system'
  type              String   @default("general")
  sourceId          String?  // Reference to notification/order/subscription ID
  status            String   @default("pending") // 'pending' | 'sent' | 'failed' | 'partial'
  successCount      Int      @default(0)
  failureCount      Int      @default(0)
  errorMessage      String?  @db.Text
  errorCode         String?
  fcmMessageId      String?
  createdAt         DateTime @default(now())
  sentAt            DateTime?

  @@index([source])
  @@index([status])
  @@index([createdAt])
  @@index([recipientEmail])
  @@map("push_notification_logs")
}

model DailyCheckIn {
  id             String   @id @default(cuid())
  appUserId      String   // Foreign key to AppUser
  date           String   // Date in YYYY-MM-DD format for easy daily checking
  buttonType     String   @default("default") // Type of button pressed (for multiple buttons)
  medicationName String   @default("default") // Medication name for the check-in
  nextDate       String?  // Next scheduled date in YYYY-MM-DD format for reminder notifications

  // Metadata
  deviceInfo  String?  // Optional device info
  ipAddress   String?  // Optional IP address

  // Relations
  appUser     AppUser  @relation(fields: [appUserId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt   DateTime @default(now())

  // Unique constraint: one check-in per user per day per medication
  @@unique([appUserId, date, medicationName])
  @@index([appUserId])
  @@index([date])
  @@index([medicationName])
  @@index([nextDate])
  @@map("daily_check_ins")
}

model ScheduledNotification {
  id             String   @id @default(cuid())
  appUserId      String   // Foreign key to AppUser
  checkInId      String   // Reference to the DailyCheckIn that created this
  medicationName String   // Medication name for the notification
  scheduledDate  String   // Date to send notification (YYYY-MM-DD)
  scheduledType  String   // 'immediate' | 'day_before' | 'on_date'

  // Notification content
  title          String
  body           String

  // Status tracking
  status         String   @default("pending") // 'pending' | 'sent' | 'failed' | 'cancelled'
  sentAt         DateTime?
  errorMessage   String?

  // Relations
  appUser        AppUser  @relation(fields: [appUserId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([appUserId])
  @@index([scheduledDate])
  @@index([status])
  @@index([scheduledType])
  @@map("scheduled_notifications")
}
